<!-- Jobs Table-->
<div class="col-sm-8 col-md-8 col-lg-8">
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <div class="row">
                <div class="col col-sm-6 col-md-6 col-lg-6">
                    <h3 class="panel-title">Jobs</h3>
                </div>
                <div class="col col-sm-6 col-md-6 col-lg-6 text-right">
                    <button type="button" class="btn btn-primary btn-sm" disabled={{if jobService.canAssignJob false true}} {{action "assign"}}>Assign</button>
                    <button type="button" class="btn btn-primary btn-sm" disabled={{if jobService.canUnassignJob false true}} {{action "unassign"}}>Unassign</button>
                    <button type="button" class="btn btn-primary btn-sm" disabled={{if jobService.canCancelJob false true}} {{action "cancel"}}>Cancel</button>
                </div>
            </div>
        </div>
          {{models-table
            data=jobService.jobs
            columns=columns
            useNumericPagination=true
            showColumnsDropdown=false
            filteringIgnoreCase=true
            showGlobalFilter=false
            displayDataChangedAction="selectJob"
            sendDisplayDataChangedAction=true
            customClasses=tableClasses
            multipleSelect=true
            useFilteringByColumns=false
          }}
    </div>
</div>
